<div class="bg_color">
	<div class="container" >
		<div class="contact_us">
			<div class="bg_image">
				<div class="d-flex flex-column justify-content-center">
				    <%= form_with url: "", :class => "contactus_form" do |f|%>
				      	<div class="text-center m-b-15">
				      		<h3>GET IN TOUCH</h3>
				      	</div>
				        <div class="m-b-10">
				          <%= f.text_field :name, 
				            :placeholder => "Name", 
				            :class => "input_width", 
				            :required => true %>
				        </div>
				        <div class="d-md-flex">
					        <div class="m-b-10 w-100 m-r-5">
					          <%= f.text_field :amount, 
					            :placeholder => "Contact Number (Optional)", 
					            :class => "input_width", 
					            required: true %>
					        </div>
					        <div class="m-b-10 w-100 m-l-5">
					          <%= f.text_field :name, 
					            :placeholder => "Email Address", 
					            :class => "input_width", 
					            :required => true %>
					        </div>
				        </div>
				        <div class="m-b-10">
				          <%= f.text_area :amount, 
				            :placeholder => "Message", 
				            :class => "", 
				            required: true %>
				        </div>
				        <div class="captcha_container" >
					        <div class="m-b-15">
					        	<%= recaptcha_tags %>
					        </div>
				        </div>
				        <div class="m-b-10 text-center">
							<button class="btn btn_submit">
								Submit
							</button>
				        </div>
				    <% end %>				    
				</div>
			</div>
		</div>
